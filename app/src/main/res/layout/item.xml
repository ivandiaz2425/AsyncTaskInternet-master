<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/border">
        <!-- INICIO HEADER -->
        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_user_group_man_man_128"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_item_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/img_person"/>
            <TextView
                android:id="@+id/tv_item_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body"
                android:textSize="12sp"
                android:layout_below="@+id/tv_item_email"
                android:layout_alignLeft="@+id/tv_item_email"/>
        </RelativeLayout>

    </RelativeLayout>



</LinearLayout>